<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddNew</servlet-name>
        <servlet-class>com.noticiasee.servlets.AddNew</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetNew</servlet-name>
        <servlet-class>com.noticiasee.servlets.GetNew</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LastNews</servlet-name>
        <servlet-class>com.noticiasee.servlets.LastNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMoreNews</servlet-name>
        <servlet-class>com.noticiasee.servlets.GetMoreNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetImg</servlet-name>
        <servlet-class>com.noticiasee.servlets.GetImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNew</servlet-name>
        <url-pattern>/AddNew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetNew</servlet-name>
        <url-pattern>/noticias/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LastNews</servlet-name>
        <url-pattern>/LastNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMoreNews</servlet-name>
        <url-pattern>/GetMoreNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetImg</servlet-name>
        <url-pattern>/GetImg/imgnoticias/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LastNews</welcome-file>
    </welcome-file-list>  
</web-app>
